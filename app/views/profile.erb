<div class="container">

  <h1> Doing Things with People Welcome's You <%= User.find(session[:user_id]).first_name %> </h1>
  <% if session[:user_id] %>
    <a href="/logout">Log Out</a>
  <%end%>

  <h2> Want to Create a Thing to do? If <a href="/create_event">so click here!</a> or fill it out below here -- </h2>

   <div id="create-event-form">
    <form id="create-event" method="post" action="/create_event">
    Name:<input id='name' type="text" name="name" placeholder=" Bedazzling Ponies Thing" > <br><br>
    Location:<input id ="location" type="text" name="location" placeholder=" The Park Behind That House" > <br><br>
    Starts At:<input id ="starts" type="text" name="starts" placeholder="Use the DD-MM-YYYY format"><br><br>
    Ends At:<input id ="ends" type="text" name="ends" placeholder="Use the DD-MM-YYYY format"><br><br>
    <input id="Make" type="submit" value="Make that Thing!">
  </form>

  <h2> Your Fabulous Things You've Created to do with People </h2>
     <% if @events_created %>
     <ul id="events">
    <% @events_created.each do |event| %>
      <li> Thing: <a href="/update_event/<%=event.id%>"> <%= event.name %></a>to be Held on: <%= event.starts_at %> </li>
    <% end %>
    </ul>
  <% end %>

</div>
